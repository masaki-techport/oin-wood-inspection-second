{
    "name": "Python Container",
    "dockerComposeFile": [
        "../../docker-compose.yml"
    ],
    "service": "api",
    "shutdownAction": "none",
    "workspaceFolder": "/workspace/src-api",
	"postCreateCommand": "/bin/sh ../.devcontainer/api/postCreateCommand.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.vscode-pylance",
				"ms-python.python",
				"eamodio.gitlens",
				"ms-python.flake8",
				"ms-python.black-formatter",
				"GitHub.copilot"
			],
			"settings": {
				"python.languageServer": "Pylance",
				"flake8.args": [
					"--max-line-length=150",
					"--ignore=E402,E252,E302,E303,E203,W503"
				],
				"editor.defaultFormatter": "ms-python.black-formatter",
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter"
				}			
			}
		}
	}
}